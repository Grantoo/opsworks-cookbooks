# mongod.conf

# for documentation of all options, see:
#   http://docs.mongodb.org/manual/reference/configuration-options/

# Where and how to store data.
storage:
  dbPath: <%= @dbpath %>/data
  journal:
    enabled: true
#  engine:
#  mmapv1:
  wiredTiger: true

# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: <%= @dbpath %>/log/mongod.log

# network interfaces
net:
  port: <%= @port %>
  bindIp: <%= @bind_ip %>


#processManagement:

security:
  keyFile: <%= @dbpath %>/secrets/keyfile

#operationProfiling:

replication:
  replSetName: <%= @repl_set  %>
  secondaryIndexPrefetch: all
  enableMajorityReadConcern: true

