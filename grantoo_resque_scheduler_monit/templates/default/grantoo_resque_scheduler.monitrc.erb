check process resque-scheduler_<%= @application %>
    with pidfile "<%= @deploy[:deploy_to] %>/shared/pids/grantoo_resque_scheduler.pid"
    start program = "PATH=/usr/local/bin:/usr/bin:/bin:$PATH /bin/sh -l -c '/etc/init.d/grantoo_resque_scheduler.init start'" as uid deploy and gid <%= @group %> with timeout 120 seconds
    stop program = "PATH=/usr/local/bin:/usr/bin:/bin:$PATH /bin/sh -l -c '/etc/init.d/grantoo_resque_scheduler.init stop'" as uid deploy and gid <%= @group %>
    if 5 restarts within 5 cycles then timeout