check process resque_scheduler
  with pidfile "<%= @deploy[:deploy_to] %>/shared/pids/grantoo_resque_scheduler.pid"
  start program = "/usr/bin/env HOME=/home/user PATH=/usr/local/bin:/usr/bin:/bin:$PATH /bin/sh -l -c 'cd <%= @deploy[:deploy_to] %>/current; nohup bundle exec rake resque:scheduler RAILS_ENV=<%= @deploy[:rails_env] %> PIDFILE=<%= @deploy[:deploy_to] %>/shared/pids/grantoo_resque_scheduler.pid >><%= @deploy[:deploy_to] %>/shared/log/resque_scheduler.log 2>&1'" as uid deploy and gid <%= @group %>
  stop program = "/bin/sh -c 'cd <%= @deploy[:deploy_to] %>/current && kill -9 $(cat "<%= @deploy[:deploy_to] %>/shared/pids/grantoo_resque_scheduler.pid") && rm -f "<%= @deploy[:deploy_to] %>/shared/pids/grantoo_resque_scheduler.pid"; exit 0;'"
  if totalmem is greater than 500 MB for 10 cycles then restart # eating up memory?
  group resque_schedulers

